# Application Environment
NODE_ENV=development
PORT=5000

# Admin Authentication
# Generate a secure password for the web admin interface
ADMIN_PASSWORD=your_secure_admin_password

# Telegram Bot Configuration
# Get your bot token from BotFather (https://t.me/botfather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Channel ID for storage (must start with -)
TELEGRAM_CHANNEL_ID=your_telegram_channel_id
# Password for Telegram bot admin commands
TELEGRAM_BOT_ADMIN_PASSWORD=your_secure_bot_admin_password

# Optional: Database URL for PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/database_name

# Optional: For webhook mode (server deployment)
# PUBLIC_URL=https://your-domain.com
# USE_WEBHOOK=true

# Deployment Settings
# VPS=true # Uncomment when deploying on a VPS